<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Calculadora.MainPage">

    <StackLayout>
        <Frame BackgroundColor="Aqua" Padding="24" CornerRadius="0">
            <Label Text="Calculadora" HorizontalTextAlignment="Center" TextColor="Black" FontSize="36"/>
        </Frame >

        <Entry Keyboard="Numeric"
       Placeholder="INGRESE NUMERO 1"
               x:Name="numero1"/>

        <Entry Keyboard="Numeric"
       Placeholder="INGRESE NUMERO 2"
               x:Name="numero2"/>

        <Button Text="SUMA" Clicked="Button_Clicked" />
        <Button Text="Resta" Clicked="Button_Clicked_1"/>
        <Button Text="Multiplicacion" Clicked="Button_Clicked_2"/>
        <Button Text="Divicion" Clicked="Button_Clicked_3"/>






    </StackLayout>

</ContentPage>
 